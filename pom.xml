	<issueManagement>
		<system>Google Code</system>
		<url>http://code.google.com/p/ontopia/issues/list</url>
	</issueManagement>
	<scm>
		<url>http://ontopia.googlecode.com/svn/trunk/</url>
		<connection>scm:svn:http://ontopia.googlecode.com/svn/trunk/</connection>
		<developerConnection>scm:svn:https://ontopia.googlecode.com/svn/trunk/</developerConnection>
