	<properties>
		<!-- CXTM test case revisions -->
		<xtm2.revision>32</xtm2.revision>
		<xtm21.revision>88</xtm21.revision>
		<ctm.revision>85</ctm.revision>
		<jtm.revision>46</jtm.revision>
		<tmxml.revision>68</tmxml.revision>
		<!-- reused dependency versions -->
		<axis2.version>1.6.0</axis2.version>
		<tmapi.version>2.0.2</tmapi.version>
	</properties>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>1.6</version>
					<dependencies>
						<dependency>
							<groupId>ant-contrib</groupId>
							<artifactId>ant-contrib</artifactId>
							<version>1.0b3</version>
							<exclusions>
								<exclusion>
									<groupId>ant</groupId>
									<artifactId>ant</artifactId>
								</exclusion>
							</exclusions>
						</dependency>
					</dependencies>
					<executions>
						<execution>
							<goals>
								<goal>run</goal>
							</goals>
						</execution>
						<execution>
							<phase>site</phase>
							<goals>
								<goal>run</goal>
							</goals>
							<id>copy-shared-docbook-resources</id>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.3.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.1.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.8</version>
					<configuration>
						<includes>
							<include>**/*Tests.java</include>
							<include>**/*Test.java</include>
							<include>**/Test*.java</include>
							<include>**/*TestCase.java</include>
						</includes>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>buildnumber-maven-plugin</artifactId>
					<version>1.0-beta-3</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>antlr-maven-plugin</artifactId>
					<version>2.2</version>
					<executions>
						<execution>
							<goals>
								<goal>generate</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>docbook-maven-plugin</artifactId>
					<version>1.0.0-alpha-1</version>
					<configuration>
						 <!-- file part of path is skipped, only directory part is used and 'xhtml/docbook.xsl' is appended -->
						<stylesheetLocation>${project.parent.basedir}/src/docbook/stylesheets/docbook2html.xslt</stylesheetLocation>
						<outputDirectory>target/site</outputDirectory>
					</configuration>
					<executions>
						<execution><phase>site</phase><goals><goal>transform</goal></goals></execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>de.jflex</groupId>
					<artifactId>maven-jflex-plugin</artifactId>
					<version>1.4.3</version>
					<executions>
						<execution>
							<goals>
								<goal>generate</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>maven-jetty-plugin</artifactId>
					<version>6.1.26</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jspc-maven-plugin</artifactId>
					<version>1.4.6</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.cargo</groupId>
					<artifactId>cargo-maven2-plugin</artifactId>
					<version>1.0.6</version>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2.1</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.2</version>
				</plugin>
				<plugin>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.5</version>
					<configuration>
						<reportOutputDirectory>${basedir}/target/site</reportOutputDirectory>
						<destDir>${basedir}/target/site/api</destDir>
						<author>true</author>
						<version>true</version>
						<use>true</use>
						<public>true</public>
						<bottom><![CDATA[<i>Copyright &#169; 2000-2011 <a href="http://www.ontopia.net">Ontopia</a>.</i>]]></bottom>
						<doctitle>Ontopia API documentation</doctitle>
						<windowtitle>Ontopia</windowtitle>
						<excludePackageNames>jsp.*</excludePackageNames>
						<quiet>true</quiet>
						<groups>
							<group><title>Core Topic Map Packages</title><packages>net.ontopia.topicmaps.core.*:net.ontopia.topicmaps.classify.*:net.ontopia.topicmaps.db2tm.*:net.ontopia.topicmaps.entry.*:net.ontopia.topicmaps.impl.*:net.ontopia.topicmaps.utils.*,net.ontopia.topicmaps.xml.*</packages></group>
							<group><title>Core Information Set Packages</title><packages>net.ontopia.infoset.*</packages></group>
							<group><title>Query Engine Packages</title><packages>net.ontopia.topicmaps.query.*</packages></group>
							<group><title>Full-text Integration Packages</title><packages>net.ontopia.infoset.fulltext.*</packages></group>
							<group><title>Schema Tools Packages</title><packages>net.ontopia.topicmaps.schema.*</packages></group>
							<group><title>Web Editor Packages</title><packages>net.ontopia.topicmaps.webed.*</packages></group>
							<group><title>Navigator Framework Packages</title><packages>net.ontopia.topicmaps.nav.*:net.ontopia.topicmaps.nav2.*</packages></group>
							<group><title>RDBMS Backend Connector Packages</title><packages>net.ontopia.topicmaps.impl.rdbms</packages></group>
						</groups>
					</configuration>
					<executions>
						<execution>
							<id>javadoc</id>
							<phase>pre-site</phase>
							<goals>
								<goal>javadoc</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.axis2</groupId>
					<artifactId>axis2-wsdl2code-maven-plugin</artifactId>
					<version>${axis2.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>wsdl2code</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.axis2</groupId>
					<artifactId>axis2-aar-maven-plugin</artifactId>
					<version>${axis2.version}</version>
					<extensions>true</extensions>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<!-- seperate execution for parent aggregation of javadoc, not inherited by modules -->
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>javadoc-parent</id>
						<phase>site</phase>
						<goals>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- disabled default site to allow our own implementation -->
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<generateReports>false</generateReports>
				</configuration>
			</plugin>
			<!-- run docbook on parent to create the global index -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>docbook-maven-plugin</artifactId>
				<inherited>false</inherited>
				<configuration>
					<stylesheetLocation>${basedir}/src/docbook/stylesheets/docbook2html.xslt</stylesheetLocation>
				</configuration>
			</plugin>
			<!-- generate test jars -->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

