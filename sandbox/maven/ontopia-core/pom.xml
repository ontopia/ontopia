		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<configuration>
							<tasks>
								<property name="project.classpath" refid="maven.compile.classpath" />
								<property name="java.path" value="${project.build.sourceDirectory}/java" />
								<property name="build.root" value="${project.build.outputDirectory}" />

								<taskdef classname="JFlex.anttask.JFlexTask" name="jflex"
									classpath="${project.classpath}" />

								<echo>Compiling LTM grammar...</echo>
								<java classname="antlr.Tool"
									dir="${java.path}/net/ontopia/topicmaps/utils/ltm"
									classpath="${project.classpath}" fork="true"
									output="${build.root}/antlr.ltm.log">
									<arg line="ltm.g" />
								</java>

								<echo>Compiling CTM grammar...</echo>
								<jflex file="${java.path}/net/ontopia/topicmaps/utils/ctm/ctm.flex"
									destdir="${java.path}" />
								<java classname="antlr.Tool"
									dir="${java.path}/net/ontopia/topicmaps/utils/ctm"
									classpath="${project.classpath}" fork="true"
									output="${build.root}/antlr.ctm.log">
									<arg line="ctm.g" />
								</java>

								<echo>Compiling tolog grammar...</echo>
								<jflex
									file="${java.path}/net/ontopia/topicmaps/query/parser/tolog.flex"
									destdir="${java.path}" />
								<java classname="antlr.Tool"
									dir="${java.path}/net/ontopia/topicmaps/query/parser"
									classpath="${project.classpath}" fork="true"
									output="${build.root}/antlr.tolog.log">
									<arg line="tolog.g" />
								</java>

								<echo>Compiling TMAPI code...</echo>
								<mkdir dir="${build.classes}/META-INF/services" />
								<copy
									file="${java.path}/net/ontopia/topicmaps/impl/tmapi2/tmsf.service"
									tofile="${build.classes}/META-INF/services/org.tmapi.core.TopicMapSystemFactory" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
