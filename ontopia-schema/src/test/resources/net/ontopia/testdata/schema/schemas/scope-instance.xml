<?xml version="1.0" encoding="ISO-8859-1"?>

<tm-schema match="loose">

  <!-- **************************** TT: OPERA **************************** -->
  <topic id="opera" match="strict">
    <instanceOf>
      <subjectIndicatorRef href="http://psi.ontopia.net/opera/#opera"/>
    </instanceOf>

    <!-- BASE NAMES -->
    <!-- exactly one name in the unconstrained scope -->
    <baseName min="1" max="1">
      <scope></scope>
    </baseName>
    <!-- may have one name in the scope of a topic of type "composer" -->
    <baseName max="1">
      <scope>
        <instanceOf>
          <subjectIndicatorRef href="http://psi.ontopia.net/opera/#composer"/>
        </instanceOf>
      </scope>
    </baseName>
    <!-- may have names in the scope "altname" -->
    <baseName>
      <scope><subjectIndicatorRef href="http://psi.ontopia.net/opera/#altname"/></scope>
    </baseName>
  </topic>

</tm-schema>
